@{
    ViewData["Title"] = "Login";
}

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand"><h1>Login</h1></a>
    </div>
</nav>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">

            <div class="form-group">
                <label for="emailAdr" class="control-label"></label>
                <input type="email" name="emailAdr" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pass" class="control-label"></label>
                <input type="password" name="pass" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@if (ViewBag.Massege != null)
{
    <p style="color:red;">@ViewBag.Massege</p>
    <br />
}

<form class="d-flex">
    <p>If you don't have an account please 
        <a class="link-primary" asp-action="SignUp" asp-controller="Home">Sign up</a>
    </p>
</form>


    
