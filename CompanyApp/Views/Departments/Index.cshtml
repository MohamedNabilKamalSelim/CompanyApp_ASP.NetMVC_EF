@model IEnumerable<CompanyApp.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a class="btn btn-primary btn-lg" asp-action="Create">Create New</a>
</p>
@if (TempData["alert"] != null)
{
    <h5 class="alert alert-warning">@TempData["alert"]</h5>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentAbbreviation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentAbbreviation)
            </td>
            <td> 
                <div class="btn btn-primary btn-sm">
                    @Html.ActionLink("Edit", "Edit", new {  id=item.DepartmentId  },
                    new{style="color:white; text-decoration:none"}) 
                </div>
                <div class="btn btn-danger btn-sm">
                    @Html.ActionLink("Delete", "Delete", new { id=item.DepartmentId },
                    new{style="color:white; text-decoration:none",
                    onclick="return confirm('Do you want to delete this dipartment..!')" })
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
